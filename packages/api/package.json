{
  "name": "api",
  "version": "1.0.0",
  "description": "Serverless webpack example using Typescript",
  "main": "handler.js",
  "scripts": {
    "test": "LAMBDALOG_SILENT=true jest",
    "test:watch": "LAMBDALOG_SILENT=true jest --watch",
    "goCirculateAws": "sh ~/.aws/goAwsStreaming.sh ",
    "build": "serverless webpack --stage dev",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "alertSwitchAwsAccount": "sh ./AWS_ACCOUNT_ALERT.sh",
    "invoke:postAuthenticationTrigger": "serverless invoke local --function cognitoDynamoUserSyncTrigger --path src/triggers/postCognitoAuthentication/mockPostCognitoAuthenticationEvent.json --stage dev",
    "invoke:buildCirculationTable": "serverless invoke local --function buildCirculationTable --path src/circulationSender/__mocks__/mockContentInsertEvent.json --stage dev",
    "invoke:circulationSender": "serverless invoke local --function circulationSender --stage dev",
    "dev": "AWS_PROFILE=circulate serverless offline --stage dev --is_local true",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "delete-stack:dev": "yarn alertSwitchAwsAccount && serverless remove --stage dev",
    "delete-stack:prod": "yarn alertSwitchAwsAccount && serverless remove --stage prod"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "dependencies": {
    "@circulate/types": "1.0.0",
    "@js-joda/core": "^3.1.0",
    "@js-joda/timezone": "^2.4.0",
    "aws-lambda": "^1.0.6",
    "aws-sdk": "^2.797.0",
    "dynamoose": "^2.3.0",
    "handlebars": "^4.7.6",
    "lambda-log": "^2.4.0",
    "mailgun-js": "^0.22.0",
    "serverless-plugin-aws-alerts": "^1.6.1",
    "source-map-support": "^0.5.16",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.64",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "latest",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "fork-ts-checker-webpack-plugin": "^6.0.2",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "prettier": "^2.1.1",
    "serverless": "^2.11.1",
    "serverless-offline": "^6.8.0",
    "serverless-plugin-monorepo": "^0.9.0",
    "serverless-webpack": "^5.3.5",
    "ts-jest": "^26.4.1",
    "ts-loader": "^8.0.11",
    "typescript": "^4.0.5",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.1.0",
    "webpack-node-externals": "^2.5.2"
  },
  "author": "Mike Alicea",
  "license": "MIT"
}
