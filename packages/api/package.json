{
  "name": "api",
  "version": "1.0.0",
  "description": "Serverless webpack example using Typescript",
  "main": "handler.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "goCirculateAws": "sh ~/.aws/goAwsStreaming.sh ",
    "build": "serverless webpack",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "alertSwitchAwsAccount": "sh ./AWS_ACCOUNT_ALERT.sh",
    "invoke:postAuthenticationTrigger": "serverless invoke local --function cognitoDynamoUserSyncTrigger --path src/triggers/postCognitoAuthentication/mockPostCognitoAuthenticationEvent.json",
    "invoke:buildCirculationTable": "serverless invoke local --function buildCirculationTable --path src/circulationSender/__mocks__/mockContentInsertEvent.json",
    "dev": "AWS_PROFILE=circulate serverless offline --stage dev --is_local true",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "delete-stack:dev": "yarn alertSwitchAwsAccount && serverless remove --stage dev",
    "delete-stack:prod": "yarn alertSwitchAwsAccount && serverless remove --stage prod"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "dependencies": {
    "@circulate/types": "1.0.0",
    "@js-joda/core": "^2.0.0",
    "@js-joda/timezone": "^2.2.0",
    "aws-lambda": "^1.0.6",
    "aws-sdk": "^2.707.0",
    "dynamoose": "^2.3.0",
    "lambda-log": "^2.4.0",
    "source-map-support": "^0.5.16",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.56",
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.11",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.3.1",
    "eslint-config-airbnb-base": "latest",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.1",
    "fork-ts-checker-webpack-plugin": "^5.0.14",
    "husky": "^4.2.3",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "serverless": "^1.75.1",
    "serverless-offline": "^6.5.0",
    "serverless-plugin-monorepo": "^0.9.0",
    "serverless-webpack": "^5.3.3",
    "ts-jest": "^26.1.4",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.7",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^2.5.1"
  },
  "author": "Mike Alicea",
  "license": "MIT"
}
